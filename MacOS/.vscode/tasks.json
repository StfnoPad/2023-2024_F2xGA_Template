{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-I./include",
                "-L./lib/lib-x86_64", // Change depending on Mac Machine...
                "src/*.cpp",
                "src/glad.c",
                "${workspaceFolder}/include/imgui/imgui.cpp",
                "${workspaceFolder}/include/imgui/imgui_demo.cpp",
                "${workspaceFolder}/include/imgui/imgui_draw.cpp",
                "${workspaceFolder}/include/imgui/imgui_widgets.cpp",
                "${workspaceFolder}/include/imgui/imgui_tables.cpp",
                "${workspaceFolder}/include/imgui/imgui_impl_opengl3.cpp",
                "${workspaceFolder}/include/imgui/imgui_impl_glfw.cpp",
                "${workspaceFolder}/include/tinygltf/tiny_gltf.cc",
                "-lglfw3",
                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "CoreFoundation",
                "-framework",
                "CoreVideo",
                "-Wno-deprecated",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}